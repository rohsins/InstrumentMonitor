<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
android:background="#9E9E9E">

<TextView android:id="@+id/section_label" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/title"
    android:textSize="28sp"
    android:textColor="#0F023D"
    android:textStyle="bold"
    android:typeface="serif"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">

    <Button android:id="@+id/buttonOne" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/buttonOne"
        android:textSize="18sp"
        android:background="@drawable/button_style2"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:onClick="bkPrecisionMultimeter"/>

</GridLayout>

</RelativeLayout>

